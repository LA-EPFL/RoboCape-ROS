<launch>
  <!-- Arguments -->
  <arg name="IP"/>
  <arg name="webcam" default="False"/>

  <!-- Environment variables -->
  <env name="ROS_IP" value="$(arg IP)"/>
  <env name="ROS_MASTER_URI" value="http://$(arg IP):11311"/>

  <!-- Initialise parameter server -->
  <rosparam command="load"
            file="$(find robocape_bringup)/config/hovercraft_actuators.yaml"
            ns="hovercraft"
  />
  <rosparam command="load"
            file="$(find robocape_bringup)/config/hovercraft_sensors.yaml"
            ns="hovercraft"
  />

  <!-- Actuator handler nodes -->
  <node name="actuator_hover_handler"
        pkg="robocape_actuators"
        type="actuator.py"
        args="hover"
        ns="hovercraft"
        respawn="true"
  />
  <node name="actuator_rudder_handler"
        pkg="robocape_actuators"
        type="actuator.py"
        args="rudder"
        ns="hovercraft"
        respawn="true"
  />

  <!-- Sensor nodes -->
  <node name="imu_raw_publisher"
        pkg="robocape_imu"
        type="imu_pub.py"
        ns="hovercraft"
        respawn="true"
  />
  <node name="nmea_serial_driver"
        pkg="nmea_navsat_driver"
        type="nmea_serial_driver"
        ns="hovercraft"
        respawn="true">
    <param name="port" value="/dev/ttyO1"/>
    <param name="baud" value="9600"/>
    <param name="frame_id" value="robocape"/>
  </node>

  <group if="$(arg webcam)">
    <node name="usb_cam"
          pkg="usb_cam"
          type="usb_cam_node"
          ns="hovercraft"
          respawn="true">
      <param name="video_device" value="/dev/video0" />
      <param name="image_width" value="320" />
      <param name="image_height" value="240" />
      <param name="pixel_format" value="mjpeg" />
      <param name="camera_frame_id" value="usb_cam" />
      <param name="io_method" value="mmap"/>
    </node>
  </group>
</launch>
